// Modern code (to be polyfilled) and explicit ambient types.
{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "types": ["jest", "vitest/globals", "node"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "useDefineForClassFields": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "declaration": true,
    "noEmit": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/.*"]
}
